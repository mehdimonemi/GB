<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.skin.TableHeaderRow?>
<?import javafx.scene.Group?>
<VBox stylesheets="@primary.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ir.rai.PrimaryController">
    <SplitPane fx:id="hBox" orientation="HORIZONTAL" dividerPositions="0.6">
        <Pane fx:id="pane">
            <TabPane fx:id="tabPane" side="LEFT" rotateGraphic="true">
                <Tab fx:id="defaultTab" closable="false">
                    <graphic>
                        <Group>
                            <Label text="نتایج" rotate="90"></Label>
                        </Group>
                    </graphic>
                    <VBox minHeight="800"></VBox>
                </Tab>
            </TabPane>
        </Pane>

        <VBox fx:id="leftContext" spacing="5">
            <GridPane>
                <Label text="Origin" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="origin" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label text="Destination" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="destination" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <ComboBox fx:id="coordinationBox" GridPane.columnIndex="2" GridPane.halignment="LEFT"
                          GridPane.rowIndex="1" GridPane.columnSpan="2"/>
            </GridPane>
            <TableView fx:id="table" editable="true"/>
            <HBox spacing="5">
                <Button fx:id="addButton" text="add" />
                <TextField fx:id="add1Para"/>
                <TextField fx:id="add2Para"/>
            </HBox>
            <ComboBox fx:id="corridors" GridPane.columnIndex="2" GridPane.halignment="LEFT"
                      GridPane.rowIndex="1" GridPane.columnSpan="2"/>
            <Button fx:id="menu" onAction="#calculate" text="Calculate"/>
        </VBox>
    </SplitPane>
</VBox>
